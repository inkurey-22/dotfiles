## File description:
## Makefile
##

SRC    =    src/main.c	\
			src/game.c	\
			src/draw.c	\
			src/birds.c	\
			src/events.c	\
			src/textures.c	\
			src/istty.c	\
			src/trigger_end.c

NAME   =    my_hunter

CC     =    clang

CFLAGS =    -W -Wall -Wextra -Iinclude -Llib -lmy -g

LDFLAGS =    -lcsfml-graphics -lcsfml-window -lcsfml-system -lcsfml-audio

OBJ    =    $(SRC:.c=.o)

all:	$(NAME)

$(NAME):	$(OBJ)
	make -C lib
	$(CC) -o $(NAME) $(OBJ) $(CFLAGS) $(LDFLAGS)

clean:
	rm -f $(OBJ)
	make clean -C lib

fclean:	clean
	rm -f $(NAME)
	make fclean -C lib

re:	fclean all
